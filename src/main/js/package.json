{
  "name": "scientific-papers-manager-front-end",
  "version": "1.0.0",
  "description": "Front end of web application for managing and searching of the scientific papers",
  "scripts": {
    "prestart": "npm-run-all start-message clean-dist copy-files compile-sass",
    "start": "npm-run-all --parallel compile-dev-js serve",
    "start-message": "babel-node tools/startMessage.js",
    "compile-dev-js": "babel-node tools/compileDev.js",
    "compile-only-js": "babel-node tools/compileOnly.js",
    "compile-sass": "node-sass --output-style compressed src/styles/index.scss dist/main.css",
    "sass-watch": "npm run compile-sass -- --watch",
    "copy-files": "copyfiles index.html dist",
    "lint": "esw webpack.config.* src build --color",
    "lint-watch": "npm run lint -- --watch",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "serve": "browser-sync start --server --serveStatic dist --files dist",
    "test": "jest",
    "tdd": "jest --watch",
    "generate-mock-data": "babel-node tools/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 4000",
    "prebuild": "npm-run-all clean-dist copy-files test lint",
    "build": "npm-run-all compile-sass compile-prod-js",
    "postbuild": "copyfiles -u 1 \"dist/*\" ../../main/resources/public",
    "compile-prod-js": "babel-node tools/compileProd.js",
    "security-check": "nsp check",
    "share": "lt --port 3000"
  },
  "author": "Dalibor Pavicic",
  "license": "MIT",
  "dependencies": {
    "bulma": "^0.3.1",
    "mobx": "^3.1.0",
    "mobx-react": "^4.1.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-loader": "6.2.5",
    "babel-preset-latest": "6.16.0",
    "babel-preset-react": "^6.23.0",
    "babel-register": "6.16.3",
    "browser-sync": "2.18.7",
    "chalk": "1.1.3",
    "compression": "1.6.2",
    "copyfiles": "1.2.0",
    "cross-env": "3.1.3",
    "css-loader": "0.25.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint-watch": "2.1.14",
    "express": "4.14.1",
    "jest": "^19.0.2",
    "json-schema-faker": "0.3.6",
    "json-server": "0.8.22",
    "localtunnel": "1.8.1",
    "node-sass": "4.5.0",
    "npm-run-all": "3.1.1",
    "nsp": "2.6.2",
    "rimraf": "2.5.4",
    "webpack": "2.2.1",
    "webpack-dev-middleware": "1.10.0"
  }
}
